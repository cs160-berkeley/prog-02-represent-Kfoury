<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:backgroundTint="#1b337d"
    android:background="#7c787d"
    android:id="@+id/test">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the ZIP code of where you want to view representatives"
        android:id="@+id/textView2"
        android:textSize="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtZip"
        android:textSize="24dp"
        android:hint="enter ZIP here"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="94dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/cmdCurrentLocation"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:text="Enter"
        android:id="@+id/cmdNext"
        android:layout_marginTop="71dp"
        android:singleLine="false"
        android:layout_below="@+id/txtZip"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/cmdCurrentLocation"
        android:background="@drawable/loc"
        android:layout_alignTop="@+id/txtZip"
        android:layout_alignParentEnd="true"
        android:textColor="#FFFFFF"
        android:textSize="30sp"





        />
</RelativeLayout>
