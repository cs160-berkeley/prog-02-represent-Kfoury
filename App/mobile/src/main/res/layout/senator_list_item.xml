<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/senatorlist">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:minWidth="100dp"
        android:minHeight="100dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="44dp"
        android:src="@android:mipmap/sym_def_app_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="McKfoury"
        android:id="@+id/txtName"
        android:layout_alignTop="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Independent"
        android:id="@+id/txtParty"
        android:layout_below="@+id/txtName"
        android:layout_toEndOf="@+id/imageView"
        android:textSize="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fadi@fadi.space"
        android:id="@+id/txtEmail"
        android:paddingTop="10dp"
        android:layout_below="@+id/txtParty"
        android:layout_alignStart="@+id/txtParty" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="http://fadi.space"
        android:id="@+id/txtWeb"
        android:paddingTop="10dp"
        android:layout_below="@+id/txtEmail"
        android:layout_toEndOf="@+id/imageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/group"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtWeb" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="today we are sending a #powerful message to the cynics who said we are dreamers"
        android:id="@+id/txtTweet"
        android:paddingTop="0dp"
        android:textSize="20dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:textStyle="italic"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:paddingBottom="30dp" />

</RelativeLayout>